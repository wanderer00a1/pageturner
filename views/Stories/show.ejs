<% layout('./layouts/main') %>
<div class="row">
  <div class="col s12 m8">
    <h3>
      <%=story.title%>
      <small><%- editIcon(story.user, loggedInUser, story._id, false) %></small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title"
          ><%=new Date(Number(story.createdAt)).toDateString() %> <%=new
          Date(Number(story.createdAt)).toLocaleTimeString() %></span
        >
        <%- story.body%>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title"> <%=story.user.displayName%> </span>
        <img
          src="<%= story.user.image %>"
          alt="<%=story.user.displayName %>"
          onerror="this.src='/img/default-user.png'"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a href="/stories/user/<%=story.user._id%>"
          >More From <%= story.user.firstName %></a
        >
      </div>
    </div>
  </div>
</div>
